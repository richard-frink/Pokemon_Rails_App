<h1><%= content_for(:title, "PokeRails | Inventory") %></h1>

<h1>My Inventory</h1>

<h2>Medicine</h2>
<table>
  <thead>
    <tr>
      <th class="col-md-6"><b>Name</b></th>
      <th class="col-md-6"><b>Quantity</b></th>
    </tr>
  </thead>
  <tbody>
  <% @items.each do |item| %>
      <% if item.item_type=="Medicine" %>
          <tr>
            <td class="col-md-6"><%= image_tag("item/#{item.id}.png")%><%= item.name %></td>
            <td class="col-md-6"><%= @myitems[item.id - 1].qty %></td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>


