<h2>All Pokemon</h2>
<hr>
<% @mypokemon.each do |p| %>

    <p class="col-md-2">
      <% if p.shiny == 0 %>
          <%= image_tag("front/normal/#{p.pokemon_id}.png") %>
      <% else %>
          <%= image_tag("front/shiny/#{p.pokemon_id}.png") %>
      <% end %>
    </p>

<% end %>