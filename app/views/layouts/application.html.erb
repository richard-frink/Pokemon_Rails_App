<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="navbar-brand"><%= link_to "PokeRails", "/"%></div>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% if !user_signed_in? %>
          <li><%= link_to "Login", :controller=>"devise/sessions", :action => :new %></li>
          <li><%= link_to "Signup", :controller=>"devise/registrations", :action => :new %></li>
          <% else %>

              <!-- Dropdown for "Explore" -->
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Explore<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Pokemart", :controller=>"pages", :action => :pokemart %></li>
                <li><%= link_to "Pokedex", :controller=>"pages", :action => :pokedex %></li>
              </ul>
            </li>

              <!-- Dropdown for "Trainer HQ" -->
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Trainer HQ <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "My Bag", :controller=>"pages", :action => :bag %></li>
                  <li><%= link_to "Pokemon Team", :controller=>"pages", :action => :pokemon_team %></li>
                </ul>
              </li>

              <!-- Dropdown for user profile -->
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= "#{current_user.username}" %><span class="caret"></span></a>
              <ul class="dropdown-menu">
               <li><%= link_to "Profile", edit_user_registration_path %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</head>
<body>
<p class="notice text-center"><%= notice %></p>
<p class="alert text-center"><%= alert %></p>
<div class="container">
  <%= yield %>
</div>
</body>
</html>